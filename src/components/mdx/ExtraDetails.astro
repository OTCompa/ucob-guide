---
// Define the props interface
interface Props {
  summary?: string;
  class?: string;
}

const props = Astro.props as Props;
const detailClass =
  `extradetails ${props.class || ""}`.trim();
---

<details class={detailClass}>
    <summary class="extradetails-summary">
        {props.summary} (Click for extra details)
    </summary>
    <slot />
</details>
